<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="80dp" >
    
    <ImageView
        android:id="@+id/iv_pictrue"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

   <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pictrue"
        android:layout_alignTop="@+id/iv_pictrue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textColor="#ff000000"
        android:text="sdasdfsdf"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_goods_name"
        android:layout_below="@+id/tv_goods_name"
        android:layout_marginTop="5dp"
        android:textColor="#ffff0000"
        android:text="sdasdfsdf"
        android:textSize="16sp" />
    
    <include
        android:id="@+id/number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        layout="@layout/number_view"
        android:focusable="false" />
    
	<ImageView
        android:id="@+id/iv_split"
        style="@style/splite_line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>