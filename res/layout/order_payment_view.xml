<com.huiwei.communitymanager.view.OrderPaymentView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:padding="20dp"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择支付方式："
        android:textColor="#ff000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_ali"
        style="@style/button"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_center_item_selector"
        android:text="支付宝"
        android:textColor="#ff000000" />

    <Button
        android:id="@+id/button_wx"
        style="@style/button"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_center_item_selector"
        android:text="微信"
        android:textColor="#ff000000" />

    <Button
        android:id="@+id/button_yl"
        style="@style/button"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_center_item_selector"
        android:text="银联"
        android:textColor="#ff000000" />

    <Button
        android:id="@+id/button_baidu"
        style="@style/button"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_center_item_selector"
        android:text="百度钱包"
        android:textColor="#ff000000" />

</com.huiwei.communitymanager.view.OrderPaymentView>